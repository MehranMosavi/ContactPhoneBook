<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".EditContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editContact_btn_Cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:backgroundTint="#00FFFFFF"
            android:textColor="#FFF"
            android:text="Cancel"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Edit Contact"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/editContact_btn_Save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:textColor="#FFF"
            android:backgroundTint="#00FFFFFF"
            android:text="SAVE"
            android:textSize="10sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_margin="8dp"
                android:src="@drawable/user_icon" />

            <Button
                android:id="@+id/btnChangePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_margin="8dp"
                android:text="Change Photo" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="First Name: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="Last Name: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="Mobile: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="Phone: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="Email: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:text="Address: "
                    android:textColor="#3E3E3E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editContact_et_Address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="true"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>



